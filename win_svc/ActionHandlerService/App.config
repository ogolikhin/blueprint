<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <connectionStrings>
    <!--The following TenantsDatabse connection string points to the nightswatch's BlueprintNova database-->
    <add name="TenantsDatabase" providerName="System.Data.SqlClient" connectionString="data source=nw.blueprintsys.net;initial catalog=BlueprintNova;user id=sa;password=$Admin99;integrated security=false;min pool size=4;max pool size=128;load balance timeout=2;packet size=16384;connectretrycount=3;connectretryinterval=3;MultipleActiveResultSets=True;" />
    <!-- The following TenantsDatabase connection string is currently unused, but should not be removed as it will be used in future for retrieving tenant information-->
    <!--<add name="TenantsDatabase" providerName="System.Data.SqlClient" connectionString="data source=BlueprintDevDB;initial catalog=Raptor;integrated security=True;min pool size=4;max pool size=128;load balance timeout=2;packet size=16384;connectretrycount=3;connectretryinterval=3;MultipleActiveResultSets=True;" />-->
  </connectionStrings>
  <log4net>
    <root>
      <!-- Valid values are All < Debug < Info < Warn < Error < Fatal < Off -->
      <level value="Warn" />
      <appender-ref ref="ServerFileAppender" />
    </root>
    <appender name="ServerFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="Log\BlueprintActionHandlerService.log" />
      <appendToFile value="true" />
      <!-- Use a minimal locking model that allows multiple processes to write to the same file -->
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <!-- Max number of log files to keep. If not specified, default is 2 -->
      <maxSizeRollBackups value="5" />
      <!-- Default rolling style is by size. -->
      <!-- To enable rolling by date, set this value to "Date". (Not recommended as the number of files generated cannot be limited)-->
      <!-- To enable rolling by both date and size, set this value to "Composite". (Not recommended as the number of files generated cannot be limited)-->
      <rollingStyle value="Size" />
      <!-- Max size of the single log file in MB. -->
      <maximumFileSize value="10MB" />
      <!-- The newest log by size would have the highest suffix -->
      <countDirection value="1" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%property{logId}: %date{dd/MM/yyyy HH:mm:ss}, %property{timeZoneOffset}, ThreadId:%t, %property{sessionId}, %property{userName}, %property{level},%message%newline" />
      </layout>
    </appender>
  </log4net>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
  </startup>
  <appSettings>
    <add key="Service.Name" value="BlueprintActionHandler" />
    <add key="MessageProcessing.MaxConcurrency" value="1" />
    <add key="NServiceBus.ConnectionString" value="host=titan.blueprintsys.net;virtualhost=workflowtest;username=admin;password=$admin2011" />
    <add key="CacheExpirationMinutes" value="1440" />

    <!-- Sepecifies whether service works as a single tenant provider or as a multiple tenant provider. Default value is "Single" -->
    <!-- Supported values -->
    <!-- Single -->
    <!-- Multiple -->
    <add key="Tenancy" value="Single" />

    <!-- Specifies whether the service works with RabbitMQ or SQL message brokers. Default value is "RabbitMQ" -->
    <!-- Supported values -->
    <!-- RabbitMQ -->
    <!-- SQL -->
    <add key="MessageBroker" value="RabbitMQ" />

    <!-- Specifies the list of supported action types. Default value is "All". We can also specify multiple types e.g., Property,Notification -->
    <!-- The list should be in a comma separated format. -->
    <!-- Supported Values -->
    <!-- Property -->
    <!-- Notification -->
    <!-- GenerateDescendants -->
    <!-- GenerateTests -->
    <!-- GenerateUserStories -->
    <!-- StateChange -->
    <!-- ArtifactsPublished -->
    <!-- All -->
    <add key="SupportedActionTypes" value="All" />

    <!-- Message Queue Name. Please be advised that changing queue name in configuration has to be supported with changing queue name in other blueprint components. -->
    <add key="MessageQueue" value="workflowtestMessageQueue" />

    <!-- Error Queue Name. Error messages are forwarded to this queue. -->
    <add key="ErrorQueue" value="workflowtestErrorQueue" />
  </appSettings>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-8.0.0.0" newVersion="8.0.0.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="System.Web.Http" publicKeyToken="31bf3856ad364e35" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-5.2.3.0" newVersion="5.2.3.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="System.Net.Http.Formatting" publicKeyToken="31bf3856ad364e35" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-5.2.3.0" newVersion="5.2.3.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
</configuration>
