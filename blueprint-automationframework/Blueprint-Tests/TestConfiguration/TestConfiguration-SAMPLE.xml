<TestConfiguration>
  
  <!-- This is the URL of the Blueprint server to test against, and the username & password of the Default Instance Admin user. -->
  <BlueprintServer address="http://localhost:8080/" username="admin" password="changeme" />
  
  <!-- This is where you add the new Blueprint services to test against. -->
  <BlueprintServices>
    <!-- Remember to change the address & port to point to the right target. -->
    <Service name="AdminStore"    address="http://localhost:8080/" />
    <Service name="AccessControl" address="http://localhost:8082/" />
    <Service name="FileStore"     address="http://localhost:8080/" />
    <Service name="Storyteller"   address="http://localhost:8080/" />
  </BlueprintServices>
  
  <!-- This is where you add the databases used by the tests. -->
  <Databases>
    <!-- Remember to change the Data Source, Initial Catalog and User ID & Password to match your environment. -->
    <Database name="Blueprint"     connection_string="Data Source=localhost;Initial Catalog=Blueprint;Integrated Security=False;MultipleActiveResultSets=True;User ID=sa;Password=$Admin99;" />
    <Database name="AdminStore"    connection_string="Data Source=localhost;Initial Catalog=Blueprint_AdminStorage;Integrated Security=False;min pool size=4;max pool size=128;load balance timeout=2;packet size=16384;connectretrycount=3;connectretryinterval=3;MultipleActiveResultSets=True;User ID=sa;Password=$Admin99;" />
    <Database name="AccessControl" connection_string="Data Source=localhost;Initial Catalog=Blueprint_AdminStorage;Integrated Security=False;min pool size=4;max pool size=128;load balance timeout=2;packet size=16384;connectretrycount=3;connectretryinterval=3;MultipleActiveResultSets=True;User ID=sa;Password=$Admin99;" />
    <Database name="FileStore"     connection_string="Data Source=localhost;Initial Catalog=Blueprint_FileStorage;Integrated Security=False;MultipleActiveResultSets=True;User ID=sa;Password=$Admin99;"/>
  </Databases>
  
  <!-- This is the level of logging to use.  Valid values are:  NONE, ERROR, WARNING, INFO, DEBUG, TRACE -->
  <LogLevel>TRACE</LogLevel>
  
</TestConfiguration>